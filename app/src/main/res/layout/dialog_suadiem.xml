<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEB8"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SỬA THÔNG TIN ĐIỂM"
        android:textColor="@color/teal_700"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvID_SUA_xemdsdiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"/>


    <EditText
        android:id="@+id/edtDiemQTSUA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập điểm quá trình"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#B58787" />

    <EditText
        android:id="@+id/edtDiemGKSUA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập điểm giữa kỳ"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#B58787" />

    <EditText
        android:id="@+id/edtDiemCKSUA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập điểm cuối kỳ"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#B58787" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnCapNhatSUA_xemdsdiem"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#009688"
            android:text="CẬP NHẬT" />
    </LinearLayout>


</LinearLayout>