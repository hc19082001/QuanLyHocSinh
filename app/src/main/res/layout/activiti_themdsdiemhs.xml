<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7FCC82"
    android:orientation="vertical"
    tools:context=".GradeRelated.MainActivityTHEMDIEM">>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="THÊM THÔNG TIN ĐIỂM"
        android:textColor="@color/teal_700"
        android:textSize="30dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn môn học"
            android:textColor="#705A5A"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinner_themmonhoc_xemdsdiem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>


    <EditText
        android:id="@+id/edtDiemQTTHEM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập điểm quá trình"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#888585" />

    <EditText
        android:id="@+id/edtDiemGKTHEM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập điểm giữa kỳ"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#888585" />

    <EditText
        android:id="@+id/edtDiemCKTHEM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập điểm cuối kỳ"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#888585" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnTHEM_xemdsdiem"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#009688"
            android:text="THÊM " />
    </LinearLayout>


</LinearLayout>